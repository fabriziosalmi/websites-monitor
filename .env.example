# Docker environment variables
# Copy this file to .env and modify values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Google PageSpeed Insights API Key (optional)
PAGESPEED_API_KEY=your_pagespeed_api_key_here

# Monitoring Interval (in seconds)
# 3600 = 1 hour, 86400 = 24 hours
MONITOR_INTERVAL=3600

# Database Configuration (for production profile)
DB_PASSWORD=secure_password_change_me
POSTGRES_DB=website_monitor
POSTGRES_USER=monitor_user

# Redis Configuration (for production profile)
REDIS_URL=redis://redis:6379/0

# SSL Configuration (for production profile)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Log Level
LOG_LEVEL=INFO
