# Website Monitor - Environment Variables
# Copy this file to .env and modify values as needed

# ===================================
# API Configuration
# ===================================
API_HOST=0.0.0.0
API_PORT=8000

# ===================================
# Google PageSpeed Insights
# ===================================
# Get your API key from: https://developers.google.com/speed/docs/insights/v5/get-started
PAGESPEED_API_KEY=your_pagespeed_api_key_here

# ===================================
# Monitoring Configuration
# ===================================
# Monitoring interval for scheduler (in seconds)
# 3600 = 1 hour, 86400 = 24 hours
MONITOR_INTERVAL=3600

# ===================================
# Database Configuration (Production)
# ===================================
# Used when running with docker-compose --profile production
DB_PASSWORD=secure_password_change_me
POSTGRES_DB=website_monitor
POSTGRES_USER=monitor_user

# ===================================
# Redis Configuration (Production)
# ===================================
# Used when running with docker-compose --profile production
REDIS_URL=redis://redis:6379/0

# ===================================
# SSL Configuration (Production)
# ===================================
# Paths for SSL certificates when using nginx
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===================================
# Logging Configuration
# ===================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
